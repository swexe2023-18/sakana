<%= form_for @content , url: {action: :update} do |f| %>
    <%= f.label :message, 'メッセージ' %>
    <%= f.text_field :message %>
    <%= f.label :fish_name, '魚の名前' %>
    <%= f.text_field :fish_name %>
    <%= f.label :size, '魚のサイズ' %>
    <%= f.number_field :size %>
    <%= f.label :place_name, '釣った場所の名前' %>
    <%= f.text_field :place_name %>
    <%= f.label :image, "画像" %>
    <%= f.file_field :image %>
    <%= f.label :mp3, "動画" %>
    <%= f.file_field :mp3 %>
    <%= f.submit "更新" %>
<% end %>