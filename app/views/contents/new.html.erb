<html>
<%= image_tag "fishing_gyotaku.png", class: "img"%>
<%= link_to "ぎょたったー", contents_path, class: "name"%>
<%= link_to "新規登録", new_user_path, class: "btn btn--uid1"%>
<%= link_to "ログイン", top_main_path, class: "btn uid2"%>

<% if current_user %>
    <%= link_to 'ログアウト', top_logout_path, class: "btn uid2"%>
<% end %>

<center>
<%= form_for @content , url: {action: :create} do |f| %>
    <%= f.label :image, "画像📷", {class: "contents1"}%>
    <%= f.file_field :image %>
    <%= f.label :mp3, "動画🎥", {class: "contents1"} %>
    <%= f.file_field :mp3 %>
    <hr>
    <%= f.label :fish_name, '魚の名前🐟', {class: "fname"} %>
    <%= f.text_field :fish_name %>
    <%= f.label :size, '魚のサイズ📏(cm)', {class: "size"}%>
    <%= f.number_field :size %>
    <br>
    <%= f.label :prefecture_name, '釣った県の名前🗾', {class: "place"} %>
    <%= f.text_field :prefecture_name %>
    <br>
    <%= f.label :place_name, '釣った場所の名前🎣', {class: "place"} %>
    <%= f.text_field :place_name %>
    <br>
    <%= f.label :message, 'コメント💭'%>
    <%= f.text_field :message %>
    <br>
    <%= f.submit "投稿" %>
<% end %>
</center>
</html>

<style>
    html{
        background: linear-gradient(90deg, rgb(11, 110, 255), rgb(0, 255, 255));
    }
    .img{
        position: fixed;
        width: 150px;
        height: 150px;
        object-fit:cover;
        margin: 0 0 0 20px;
    }
    .name{
        position: absolute;
        left: 28px;
        top: 110px;
        font-size:25px;
        font-weight: 900;
        color: #FF9900;
        padding:0;
        margin:0;
    }
    center{
        padding-top: 300px;
    }
    hr{
        border:none;border-top:dashed 2px #FF9900;height:2px;width:800px;
        paddong: 25px;
    }
    .btn--uid1{
        color: #FFFFFF;
        position: fixed;
        top: 20px;right: 200px;
        font-size: 20px;
        background: #FF9900;
        border-radius: 100vh;
        padding: 12px 20px;
    }
    .uid2{
        color: #FFFFFF;
        position: fixed;
        top: 80px;right: 200px;
        font-size: 20px;
        background: #FF9900;
        border-radius: 100vh;
        padding: 12px 20px;
    }
    .contents1{
        padding-top: 100px;
        color: #FF3300;
        font-size:23px;
        font-weight: 900;
        padding: 10px;
    }
    .fname{
        padding-top: 10px;
        color: #FF9900;
        padding-left: 10px;
        font-size:23px;
    }
    .size{
        padding-top: 10px;
        color: #FF9900;
        padding-left: 10px;
        font-size:23px;
    }
    .place{
        padding-top: 10px;
        color: #880000;
        padding-left: 10px;
        font-size:23px;
    }
</style>